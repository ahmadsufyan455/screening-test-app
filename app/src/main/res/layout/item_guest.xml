<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/img_guest"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/image_event"
        android:scaleType="centerCrop"
        android:src="@drawable/g1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_guest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:text="@string/your_name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_guest"
        app:layout_constraintEnd_toEndOf="@id/img_guest"
        app:layout_constraintStart_toStartOf="@+id/img_guest"
        app:layout_constraintTop_toTopOf="@+id/img_guest" />

</androidx.constraintlayout.widget.ConstraintLayout>